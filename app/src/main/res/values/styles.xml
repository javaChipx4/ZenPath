<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- for MoodTracker -->

    <!-- Week labels under month (SUN MON TUE...) -->
    <style name="WeekLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#6A6A6A</item>
        <item name="android:fontFamily">serif</item>
        <!-- ✅ FIX: remove extra top/bottom font padding for consistent spacing -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Purple panel label row (M T W T F S S) -->
    <style name="DotLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Slot container for dot alignment -->
    <style name="DotCircleSlot">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>  <!-- IMPORTANT -->
        <item name="android:layout_weight">1</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- The dot itself -->
    <style name="DotCircle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/dot_unselected_mt</item>
    </style>

    <style name="MoodEmoji">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- mood history -->
    <style name="WeekDot">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_week_dot_mh</item>
    </style>

    <!-- ✅ NEW: Week date number style for swipeable week row -->
    <style name="WeekDateMH">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="WeekDotSelected">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_week_dot_selected_mh</item>
    </style>

    <style name="EmojiItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HistoryRect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:background">@drawable/bg_history_rect</item>
    </style>

    <style
        name="Base.Theme.StarSweepActivity"
        parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="HomeCalendarWeekText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">11sp</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HomeCalendarDateText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Swatch">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/bg_swatch</item>
    </style>

    <!-- ✅ Shared text styles (kept same, just fixed spacing consistency) -->
    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
        <!-- small polish; safe to add (doesn’t break anything) -->
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#2A2A2A</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#6A6A6A</item>
        <!-- ✅ FIX -->
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <!-- ✅ NEW: optional spacing helpers (DOES NOT change your current UI unless you use them) -->
    <dimen name="space_xs">4dp</dimen>
    <dimen name="space_sm">8dp</dimen>
    <dimen name="space_md">16dp</dimen>
    <dimen name="space_lg">24dp</dimen>
    <dimen name="space_xl">32dp</dimen>

    <!-- ✅ NEW: optional text sizes (safe, reusable) -->
    <dimen name="text_xs">10sp</dimen>
    <dimen name="text_sm">12sp</dimen>
    <dimen name="text_md">16sp</dimen>
    <dimen name="text_lg">20sp</dimen>
    <dimen name="text_xl">24sp</dimen>

</resources>