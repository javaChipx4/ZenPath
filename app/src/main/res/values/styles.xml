<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- for MoodTracker -->

    <!-- Week labels under month (SUN MON TUE...) -->
    <style name="WeekLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#6A6A6A</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!-- Purple panel label row (M T W T F S S) -->
    <style name="DotLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Slot container for dot alignment -->
    <style name="DotCircleSlot">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- The dot itself -->
    <style name="DotCircle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/dot_unselected_mt</item>
    </style>

    <style name="MoodEmoji">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- ===================== MOOD HISTORY ===================== -->

    <!-- Old dots style (keep, in case you still use it somewhere) -->
    <style name="WeekDot">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_week_dot_mh</item>
    </style>

    <style name="WeekDotSelected">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_week_dot_selected_mh</item>
    </style>

    <!-- âœ… NEW: Week date number style for swipeable week row -->
    <style name="WeekDateMH">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EmojiItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HistoryRect">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:background">@drawable/bg_history_rect</item>
    </style>

    <!-- ===================== THEMES / OTHER ===================== -->

    <style name="Base.Theme.StarSweepActivity" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="HomeCalendarWeekText">
        <item name="android:textColor">#6A6A6A</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="HomeCalendarDateText">
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
