<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pauseOverlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#99000000">

    <LinearLayout
        android:id="@+id/pauseCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_pause_card">

        <TextView
            android:id="@+id/tvPauseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paused"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvPauseSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Take a breath. You're in control."
            android:textSize="14sp"
            android:textColor="#CFE0FF"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/btnResume"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Resume"
            android:textStyle="bold"
            android:textColor="#0B1020"
            android:background="@drawable/bg_pause_primary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/btnRestart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Restart"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_pause_secondary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/btnExtra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Extra"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_pause_secondary"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/btnBackToSelection"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Back to Selection"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_pause_ghost"/>
    </LinearLayout>

</FrameLayout>
