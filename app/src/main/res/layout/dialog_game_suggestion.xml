<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="26dp">

    <!-- Card container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_suggestion_card"
        android:padding="16dp"
        android:elevation="10dp">

        <!-- Title row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Suggestion"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="The game that is appropriate for you is this one."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

        <!-- Game preview box -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_preview_box">

            <ImageView
                android:id="@+id/ivGamePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Game preview" />
        </FrameLayout>

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="170dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="PLAY"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/bg_play_button"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>