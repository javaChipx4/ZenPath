<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <!-- Book spread container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- LEFT PAGE -->
        <androidx.cardview.widget.CardView
            android:id="@+id/leftPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_paper_page">

                <!-- faint notebook lines -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:alpha="0.35"
                    android:src="@drawable/notebook_lines_diary"
                    android:contentDescription="Lines" />

                <!-- margin rule line -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:background="#55C14B5A" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/tvLeftMeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2026-02-05"
                        android:textSize="12sp"
                        android:textColor="#1E1E1E"
                        android:alpha="0.70"
                        android:gravity="start"
                        android:fontFamily="serif" />

                    <EditText
                        android:id="@+id/etLeft"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:maxLines="999"
                        android:textColor="#1E1E1E"
                        android:textColorHint="#8A8A8A"
                        android:textSize="15sp"
                        android:fontFamily="serif"
                        android:lineSpacingExtra="6dp"
                        android:padding="0dp"
                        android:hint="Write here…" />
                </LinearLayout>

                <!-- Page edge shadow (outer) -->
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/bg_page_edge_shadow" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- SPINE SHADOW -->
        <View
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_spine_shadow" />

        <!-- RIGHT PAGE -->
        <androidx.cardview.widget.CardView
            android:id="@+id/rightPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_paper_page">

                <!-- faint notebook lines -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:alpha="0.35"
                    android:src="@drawable/notebook_lines_diary"
                    android:contentDescription="Lines" />

                <!-- margin rule line -->
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:background="#55C14B5A" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/tvRightMeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2026-02-06"
                        android:textSize="12sp"
                        android:textColor="#1E1E1E"
                        android:alpha="0.70"
                        android:gravity="end"
                        android:fontFamily="serif" />

                    <EditText
                        android:id="@+id/etRight"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:maxLines="999"
                        android:textColor="#1E1E1E"
                        android:textColorHint="#8A8A8A"
                        android:textSize="15sp"
                        android:fontFamily="serif"
                        android:lineSpacingExtra="6dp"
                        android:padding="0dp"
                        android:hint="Write here…" />
                </LinearLayout>

                <!-- Page edge shadow (outer) -->
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_page_edge_shadow_reverse" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
