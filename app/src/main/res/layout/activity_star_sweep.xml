<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- âœ… GAME VIEW -->
    <com.example.zenpath.StarSweepView
        android:id="@+id/starSweepView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- âœ… TOP HUD PANEL -->
    <LinearLayout
        android:id="@+id/topHud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#22000000">

        <!-- âœ… Shape + Settings Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Shape Text -->
            <TextView
                android:id="@+id/tvBreath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shape: Star âœ¨"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- âœ… Settings Cogwheel -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#FFFFFF"
                android:padding="6dp"
                android:contentDescription="Settings" />
        </LinearLayout>

        <!-- âœ… Connect Counter -->
        <TextView
            android:id="@+id/tvStarsLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect: 0 / 10"
            android:textSize="16sp"
            android:textColor="#EDE7FF"
            android:layout_marginTop="8dp" />

        <!-- âœ… Daily Streak -->
        <TextView
            android:id="@+id/tvStreakGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily streak: 0 ðŸ”¥"
            android:textSize="16sp"
            android:textColor="#EDE7FF"
            android:layout_marginTop="4dp" />

        <!-- âœ… Progress Bar -->
        <ProgressBar
            android:id="@+id/progressStars"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:progress="0"
            android:max="100"
            android:progressTint="#C6B7E2"
            android:backgroundTint="#33FFFFFF" />
    </LinearLayout>

    <!-- âœ… PLAY AGAIN BUTTON (Hidden until Finished) -->
    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again âœ¨"
        android:textSize="18sp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:backgroundTint="#C6B7E2"
        android:textColor="#1E1B3A"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="30dp"
        android:visibility="gone" />

</FrameLayout>
