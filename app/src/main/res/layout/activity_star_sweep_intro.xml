<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Night gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0E0B2B"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="22dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Star Sweep ✨"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A calm constellation game"
            android:textColor="#EDE7FF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!-- Instruction Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:padding="18dp"
            android:background="#221A3A">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to play"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="• Tap the glowing star to connect the next point.\n\n• Follow the order until you finish the shape.\n\n• When completed, the constellation flashes for 2 seconds.\n\n• Tap Play Again to get a new constellation."
                android:textColor="#EDE7FF"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Hint: The next star will glow softly."
                android:textColor="#C6B7E2"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start ✨"
            android:layout_marginTop="26dp"
            android:backgroundTint="#C6B7E2"
            android:textColor="#1E1B3A"
            android:padding="14dp"/>

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#1E1B3A"
            android:padding="14dp"/>

    </LinearLayout>

</FrameLayout>