<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient_diary">

    <!-- TOP BAR -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zenpath"
        android:textColor="#1E1E1E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Burger icon -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_menu"
        android:tint="#000000"
        android:contentDescription="Menu"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseAppTint" />

    <!-- TOP LINE -->
    <View
        android:id="@+id/topLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1E1E1E"
        android:alpha="0.25"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SUBTITLE -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pick a mini activity — no pressure, just something that fits your vibe."
        android:textColor="#1E1E1E"
        android:textSize="12sp"
        android:alpha="0.85"
        android:fontFamily="serif"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/topLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SUGGESTION PILL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pillSuggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="999dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F6F1FF"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.cardview.widget.CardView>

    <!-- SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/scrollGames"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_blue_gradient_diary"
        app:layout_constraintTop_toBottomOf="@id/pillSuggestion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/gameContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="22dp"
            android:background="@drawable/bg_blue_gradient_diary">

            <!-- GAME 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardConstella"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="14dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F6F6F6">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_constella"
                        android:tint="#77FFFFFF"
                        tools:ignore="UseAppTint"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_constella" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Constella"
                                android:textColor="#1E1E1E"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:fontFamily="serif"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Feeling overwhelmed? Let’s slow down. Stargaze a bit and spot constellations."
                                android:textColor="#1E1E1E"
                                android:textSize="12sp"
                                android:alpha="0.8"
                                android:fontFamily="serif"/>
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- GAME 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLantelle"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="14dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F6F6F6">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_lantelle"
                        android:tint="#77FFFFFF"
                        tools:ignore="UseAppTint"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_lantelle" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lantelle"
                                android:textColor="#1E1E1E"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:fontFamily="serif"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="Got stuff on your chest? Write it out, send it off, and let that weight leave with the lantern."
                                android:textColor="#1E1E1E"
                                android:textSize="12sp"
                                android:alpha="0.8"
                                android:fontFamily="serif"/>
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- GAME 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAsthera"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F6F6F6">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_asthera"
                        android:tint="#77FFFFFF"
                        tools:ignore="UseAppTint"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_asthera" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="18dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asthera"
                                android:textColor="#1E1E1E"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:fontFamily="serif"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="In a creative mood? Build something fun and chill—no pressure, just vibes."
                                android:textColor="#1E1E1E"
                                android:textSize="12sp"
                                android:alpha="0.8"
                                android:fontFamily="serif"/>
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
