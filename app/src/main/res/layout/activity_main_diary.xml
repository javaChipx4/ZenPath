<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient_diary">

    <!-- Top thin line -->
    <View
        android:id="@+id/topLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.45"
        android:background="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Burger icon -->
    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_menu"
        android:contentDescription="Menu"
        android:tint="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="22dp"/>

    <TextView
        android:id="@+id/tvMyVirtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Virtual"
        android:textColor="#1E1E1E"
        android:textSize="22sp"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@id/topLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/tvDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="serif"
        android:text="Diary"
        android:textColor="#1E1E1E"
        android:textSize="32sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/tvMyVirtual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ✅ Book pages -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/diaryPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvDiary"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:background="@drawable/bg_save_pill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="34dp"/>

    <!-- ✅ Open-book intro overlay -->
    <FrameLayout
        android:id="@+id/bookIntroOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bookIntroCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_margin="24dp"
            android:background="@drawable/bg_book_intro_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open your diary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1E1E1E"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Swipe pages like a book. Tap Save anytime."
                android:textSize="14sp"
                android:textColor="#1E1E1E"/>

            <Button
                android:id="@+id/btnOpenBook"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="14dp"
                android:text="Open"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#1E1E1E"
                android:background="@drawable/bg_save_pill"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
