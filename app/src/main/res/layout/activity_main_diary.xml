<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient_diary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">


    <!-- Outer Container -->
    <LinearLayout
        android:id="@+id/container_main"
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:background="@drawable/bg_blue_gradient_diary"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header: Title + Menu Dots -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="My Virtual Diary"
                android:textColor="#4A148C"
                android:textSize="28sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="⋮⋮⋮"
                android:textColor="#7B1FA2"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Lined Paper Area -->
        <LinearLayout
            android:id="@+id/paper_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_paper_diary"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="notes/questions"
                android:textColor="#AD1457"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/notebook_lines_diary"
                android:gravity="top|start"
                android:hint="Write your notes here..."
                android:lineSpacingExtra="24dp"
                android:textColor="#880E4F"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#AB47BC"
            android:elevation="4dp"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
