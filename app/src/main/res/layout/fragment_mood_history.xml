<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_panel_purple_mt">

            <!-- ===== Week navigation ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/btnPrevWeek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="â€¹"
                    android:textSize="22sp"
                    android:textColor="#1E1E1E"/>

                <TextView
                    android:id="@+id/tvWeekLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="This week"
                    android:textSize="12sp"
                    android:textColor="#1E1E1E"
                    android:fontFamily="serif"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/btnNextWeek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="â€º"
                    android:textSize="22sp"
                    android:textColor="#1E1E1E"/>
            </LinearLayout>

            <!-- ===== Days + dots aligned ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <!-- MON -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot0"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- TUE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot1"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- WED -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot2"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- THU -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TH"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot3"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- FRI -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot4"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- SAT -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAT"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot5"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- SUN -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUN"
                        android:textSize="10sp"
                        android:textColor="#4A4A4A"/>

                    <View
                        android:id="@+id/dot6"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Selected date -->
            <TextView
                android:id="@+id/tvSelectedDayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb 05, 2026"
                android:textSize="12sp"
                android:textColor="#1E1E1E"
                android:fontFamily="serif"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOOD:"
                android:textSize="10sp"
                android:textColor="#EFEFEF"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"/>

            <!-- Emojis -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView android:id="@+id/emoji0" style="@style/EmojiItem" android:text="ðŸ˜"/>
                <TextView android:id="@+id/emoji1" style="@style/EmojiItem" android:text="ðŸ˜Œ"/>
                <TextView android:id="@+id/emoji2" style="@style/EmojiItem" android:text="ðŸ˜"/>
                <TextView android:id="@+id/emoji3" style="@style/EmojiItem" android:text="ðŸ¥°"/>
                <TextView android:id="@+id/emoji4" style="@style/EmojiItem" android:text="ðŸ˜­"/>
            </LinearLayout>

            <!-- âœ… NEW: Mood Quote (above note card) -->
            <TextView
                android:id="@+id/tvMoodQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="How are you feeling today?"
                android:textSize="12sp"
                android:textColor="#1E1E1E"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:alpha="0.9"/>

            <!-- Note -->
            <androidx.cardview.widget.CardView
                android:id="@+id/noteCard"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F6F6F6">

                <TextView
                    android:id="@+id/tvMoodNote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:text="No note for this day."
                    android:textColor="#1E1E1E"
                    android:textSize="13sp"
                    android:fontFamily="serif"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
