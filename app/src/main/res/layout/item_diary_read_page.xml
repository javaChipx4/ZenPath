<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="14dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_diary_read_paper"
        android:padding="16dp">

        <!-- Header like the sample -->
        <LinearLayout
            android:id="@+id/headerBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReadTitleGhost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#1E1E1E"
                android:alpha="0.25"
                android:textSize="18sp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/tvReadMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="February 06 â€¢ 0 characters"
                android:textColor="#1E1E1E"
                android:alpha="0.35"
                android:textSize="11sp"
                android:fontFamily="serif"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>

        <!-- Body -->
        <TextView
            android:id="@+id/tvReadBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            android:text="Diary text here..."
            android:textColor="#1E1E1E"
            android:textSize="14sp"
            android:fontFamily="serif"
            android:lineSpacingExtra="6dp"/>

        <!-- Page number -->
        <TextView
            android:id="@+id/tvReadPageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="Page 1 / 3"
            android:textSize="11sp"
            android:textColor="#1E1E1E"
            android:alpha="0.55"
            android:fontFamily="serif"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>
