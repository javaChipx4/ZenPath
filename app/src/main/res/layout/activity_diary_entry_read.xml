<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradient_diary">

    <ImageButton
        android:id="@+id/btnReadBack"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back"
        android:tint="#1E1E1E"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="18dp"/>

    <TextView
        android:id="@+id/tvReadTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feb 06, 2026"
        android:textSize="16sp"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btnReadBack"
        app:layout_constraintBottom_toBottomOf="@id/btnReadBack"
        app:layout_constraintStart_toEndOf="@id/btnReadBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="18dp"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/readPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/btnReadBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
