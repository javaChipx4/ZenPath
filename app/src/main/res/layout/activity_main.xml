<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple">

        <!-- This will become the "sliding container" later -->
        <LinearLayout
            android:id="@+id/homePagerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_blue_gradient_diary">

            <!-- ========================= -->
            <!-- PANEL A (Top) - Journal -->
            <!-- ========================= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!-- APP TITLE -->
                <TextView
                    android:id="@+id/tvTopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zen - Path"
                    android:textSize="13sp"
                    android:textColor="#1E1E1E"
                    android:fontFamily="serif"
                    android:letterSpacing="0.08"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- DIVIDER -->
                <View
                    android:id="@+id/topDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#2E2E2E"
                    android:alpha="0.35"
                    app:layout_constraintTop_toBottomOf="@id/tvTopTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- BURGER MENU -->
                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_menu"
                    android:tint="#000000"
                    app:layout_constraintTop_toBottomOf="@id/topDivider"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- DATE (new, does not break) -->
                <TextView
                    android:id="@+id/tvTodayDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January 21"
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toBottomOf="@id/topDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="6dp"/>

                <!-- QUOTE -->
                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/box_rounded"
                    android:padding="14dp"
                    android:text="Good Day, user! Take today slowly, even small moments of calm are still progress."
                    android:textAlignment="center"
                    android:textSize="11.5sp"
                    android:textColor="#1E1E1E"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toBottomOf="@id/btnMenu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- JOURNAL TITLE -->
                <Button
                    android:id="@+id/tvJournal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Journal"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#0F0F0F"
                    android:fontFamily="serif"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:padding="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tvQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- OVAL NOTE TEXT -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/ovalCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E6E1F2"
                    app:layout_constraintTop_toBottomOf="@id/tvJournal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvNoteText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Write something here.\nI'm here to listen."
                        android:gravity="center"
                        android:minLines="3"
                        android:maxLines="6"
                        android:paddingTop="22dp"
                        android:paddingBottom="22dp"
                        android:textSize="13sp"
                        android:textColor="#2A2A2A"
                        android:fontFamily="serif" />
                </androidx.cardview.widget.CardView>

                <!-- Left bubbles (visual-only, new) -->
                <LinearLayout
                    android:id="@+id/bubbleColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/ovalCard"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:background="@drawable/box_rounded"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empurity"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:background="@drawable/box_rounded"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Success"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:background="@drawable/box_rounded"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"/>
                </LinearLayout>

                <!-- Right quote block (visual-only, new) -->
                <TextView
                    android:id="@+id/tvRightQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Maybe today is a good day to slow down and just breathe for a second..."
                    android:textColor="#1E1E1E"
                    android:textSize="11.5sp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="@id/bubbleColumn"
                    app:layout_constraintStart_toEndOf="@id/bubbleColumn"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp" />

                <!-- Big circle above username (visual-only, new) -->
                <View
                    android:id="@+id/profileCircle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/box_rounded"
                    android:alpha="0.35"
                    app:layout_constraintBottom_toTopOf="@id/tvUsername"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp" />

                <!-- USERNAME (display only) -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USERNAME"
                    android:textColor="#1E1E1E"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="16dp" />

                <!-- Small hint -->
                <TextView
                    android:id="@+id/tvSlideHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swipe up"
                    android:textColor="#1E1E1E"
                    android:textSize="10sp"
                    android:alpha="0.55"
                    android:fontFamily="serif"
                    app:layout_constraintBottom_toTopOf="@id/tvUsername"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="4dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ========================= -->
            <!-- PANEL B (Bottom) - Play -->
            <!-- ========================= -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!-- HELLO USER (keep same ID from your file so we can bind) -->
                <TextView
                    android:id="@+id/tvHelloUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, User!"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- Big top circle -->
                <View
                    android:id="@+id/topCircle"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:alpha="0.18"
                    android:background="@drawable/box_rounded"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Center quote -->
                <TextView
                    android:id="@+id/tvCenterQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Paper isn't just paper, but you should remember that you're not a paper."
                    android:textColor="#1E1E1E"
                    android:textSize="11sp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginTop="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- small circle -->
                <View
                    android:id="@+id/smallDot"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/box_rounded"
                    android:alpha="0.25"
                    app:layout_constraintTop_toBottomOf="@id/tvCenterQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:id="@+id/tvSubQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are always valid."
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toBottomOf="@id/smallDot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <!-- CALENDAR (reuse same ID so your MainActivity code still finds it) -->
                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/tvSubQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- PLAY BUTTON (reuse same ID so your code still works) -->
                <Button
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_pill"
                    android:text="PLAY"
                    android:textAllCaps="true"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1E1E1E"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toBottomOf="@id/calendarView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
