<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple">

        <!-- âœ… glowing overlay (behind content) -->
        <View
            android:id="@+id/glowOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_home_glow"
            android:alpha="0"
            android:clickable="false"
            android:focusable="false"/>

        <!-- sliding container -->
        <LinearLayout
            android:id="@+id/homePagerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_blue_gradient_diary">

            <!-- PANEL A -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tvTopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zen - Path"
                    android:textSize="14sp"
                    android:textColor="#1E1E1E"
                    android:fontFamily="serif"
                    android:letterSpacing="0.08"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/topDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#2E2E2E"
                    android:alpha="0.35"
                    app:layout_constraintTop_toBottomOf="@id/tvTopTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_menu"
                    android:tint="#000000"
                    app:layout_constraintTop_toBottomOf="@id/topDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="UseAppTint" />

                <FrameLayout
                    android:id="@+id/profileWrap"
                    android:layout_width="118dp"
                    android:layout_height="118dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/topDivider"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle_fill_light" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="USERNAME"
                    android:textColor="#1E1E1E"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toTopOf="@id/profileWrap"
                    app:layout_constraintStart_toEndOf="@id/profileWrap" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/dateQuotePill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername"
                    app:layout_constraintStart_toEndOf="@id/profileWrap"
                    app:layout_constraintEnd_toStartOf="@id/btnMenu">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/pill_outline"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="January 21"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="serif"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/tvPillQuote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to reveal"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Quote..."
                    app:layout_constraintTop_toBottomOf="@id/dateQuotePill"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvJournal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="JOURNAL"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#0F0F0F"
                    android:fontFamily="serif"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintTop_toBottomOf="@id/profileWrap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ovalCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tvJournal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvNoteText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Write todayâ€™s thoughts"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:textSize="14sp"
                        android:textColor="#1E1E1E"
                        android:fontFamily="serif"
                        android:background="@drawable/oval_outline" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTodayCheckIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F6F1FF"
                    app:layout_constraintTop_toBottomOf="@id/ovalCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/tvCheckInTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today Check-in"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/tvCheckInMood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Mood: â€”"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/tvCheckInStress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Stress: â€”"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/tvStreak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="ðŸ”¥ 0-day check-in streak"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/tvWeeklyReflection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="ðŸ“ You reflected 0x this week"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="serif"/>

                        <Button
                            android:id="@+id/btnCheckInNow"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:text="Check in"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:background="@drawable/button_pill_ripple" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvSlideHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SWIPE UP"
                    android:textColor="#1E1E1E"
                    android:textSize="10sp"
                    android:alpha="0.55"
                    android:fontFamily="serif"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:id="@+id/swipeHandle"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <FrameLayout
                    android:id="@+id/fortuneOverlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#99000000"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:id="@+id/fortuneCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/box_rounded"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imgFortune"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_fortune_cookie"
                            android:contentDescription="Fortune"
                            android:alpha="0.95"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to open your fortune"
                            android:textColor="#1E1E1E"
                            android:textSize="13sp"
                            android:fontFamily="serif"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- PANEL B -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tvHelloUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, User!"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/tvIdentity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Track your mood, reflect, and reset â€” one day at a time."
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    android:alpha="0.75"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHelloUser"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/topCircle"
                    android:layout_width="0dp"
                    android:layout_height="240dp"
                    android:alpha="0.18"
                    android:background="@drawable/box_rounded"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvCenterQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Quote..."
                    android:textColor="#1E1E1E"
                    android:textSize="11sp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginTop="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/smallDot"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/box_rounded"
                    android:alpha="0.25"
                    app:layout_constraintTop_toBottomOf="@id/tvCenterQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:id="@+id/tvSubQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are always valid."
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toBottomOf="@id/smallDot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/calendarCardHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F6F6F6"
                    app:layout_constraintTop_toBottomOf="@id/tvSubQuote"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weekDayTextAppearance="@style/HomeCalendarWeekText"
                        android:dateTextAppearance="@style/HomeCalendarDateText"
                        android:focusedMonthDateColor="#1E1E1E"
                        android:unfocusedMonthDateColor="#8A8A8A"
                        android:selectedWeekBackgroundColor="#D6C9F2"
                        android:weekSeparatorLineColor="#E0E0E0"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWindDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F6F1FF"
                    app:layout_constraintTop_toBottomOf="@id/calendarCardHome"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/tvWindDownTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wind down ðŸŒ™"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/tvWindDownDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="If you want to slow down, weâ€™ve got mini activities you can try."
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="serif"/>

                        <TextView
                            android:id="@+id/tvWindDownSuggestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Suggestion: â€”"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="serif"/>

                        <Button
                            android:id="@+id/btnBrowseActivities"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:text="Browse mini activities"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:background="@drawable/button_pill_ripple" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <include
                    android:id="@+id/includeOpenBook"
                    layout="@layout/overlay_open_book" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
