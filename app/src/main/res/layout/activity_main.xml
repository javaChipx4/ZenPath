<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ripple">

        <!-- glowing overlay (behind content) -->
        <View
            android:id="@+id/glowOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@drawable/bg_home_glow"
            android:clickable="false"
            android:focusable="false" />

        <!-- sliding container -->
        <LinearLayout
            android:id="@+id/homePagerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_blue_gradient_diary"
            android:orientation="vertical">

            <!-- ===================== PANEL A ===================== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <!-- Top title -->
                <TextView
                    android:id="@+id/tvTopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zen - Path"
                    android:textColor="#1E1E1E"
                    android:textSize="13sp"
                    android:letterSpacing="0.10"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/topDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.18"
                    android:background="#2E2E2E"
                    app:layout_constraintTop_toBottomOf="@id/tvTopTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Menu -->
                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:padding="6dp"
                    android:src="@drawable/ic_menu"
                    android:tint="#000000"
                    app:layout_constraintTop_toBottomOf="@id/topDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="UseAppTint" />

                <!-- Profile avatar -->
                <FrameLayout
                    android:id="@+id/profileWrap"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@id/topDivider"
                    app:layout_constraintStart_toStartOf="parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle_fill_light" />

                    <ImageView
                        android:id="@+id/imgProfileAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:background="@drawable/bg_avatar_border_selector"
                        android:clipToOutline="true"
                        android:clickable="true"
                        android:contentDescription="Profile avatar"
                        android:focusable="true"
                        android:outlineProvider="background"
                        android:padding="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/boy" />
                </FrameLayout>

                <!-- Primary username -->
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="USERNAME"
                    android:textColor="#111111"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toTopOf="@id/profileWrap"
                    app:layout_constraintStart_toEndOf="@id/profileWrap"
                    app:layout_constraintEnd_toStartOf="@id/btnMenu" />

                <!-- Date / quote pill -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dateQuotePill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tvUsername"
                    app:layout_constraintStart_toEndOf="@id/profileWrap"
                    app:layout_constraintEnd_toStartOf="@id/btnMenu">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pill_outline"
                        android:orientation="vertical"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="January 21"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvPillQuote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="Tap to reveal"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- kept for Java compatibility -->
                <TextView
                    android:id="@+id/tvQuote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Quote..."
                    app:layout_constraintTop_toBottomOf="@id/dateQuotePill"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Journal title -->
                <TextView
                    android:id="@+id/tvJournal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="JOURNAL"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:textColor="#0F0F0F"
                    android:letterSpacing="0.02"
                    android:fontFamily="serif"
                    app:layout_constraintTop_toBottomOf="@id/profileWrap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- âœ… NEW: Beautiful Journal Card (like your image!) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/ovalCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#CFC9FF"
                    app:layout_constraintTop_toBottomOf="@id/tvJournal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="32dp"
                        android:paddingBottom="32dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp">

                        <TextView
                            android:id="@+id/tvNoteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write something here."
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I'm here to listen."
                            android:textColor="#1E1E1E"
                            android:textStyle="italic"
                            android:textSize="13sp"
                            android:alpha="0.65"
                            android:fontFamily="sans-serif"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Today check-in card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTodayCheckIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F6F1FF"
                    app:layout_constraintTop_toBottomOf="@id/ovalCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/tvCheckInTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today Check-in"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvCheckInMood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Mood: â€”"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvCheckInStress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Stress: â€”"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:alpha="0.12"
                            android:background="#000000"/>

                        <TextView
                            android:id="@+id/tvStreak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”¥ 0-day check-in streak"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvWeeklyReflection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="ðŸ“ You reflected 0x this week"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="sans-serif" />

                        <Button
                            android:id="@+id/btnCheckInNow"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="12dp"
                            android:text="Check in"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:background="@drawable/button_pill_ripple" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- After check-in filler card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMicroReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F6F1FF"
                    app:layout_constraintTop_toBottomOf="@id/cardTodayCheckIn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/tvMicroResetTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Micro reset âœ¨"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tvMicroResetDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Quick one: inhale for 4â€¦ hold 2â€¦ exhale for 6. Do 3 rounds."
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvMicroResetHint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tip: swipe up for Calendar + Wind down"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.65"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/swipeHandle"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- fortune overlay -->
                <FrameLayout
                    android:id="@+id/fortuneOverlay"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#99000000"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:id="@+id/fortuneCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/box_rounded"
                        android:elevation="31dp">

                        <ImageView
                            android:id="@+id/imgFortune"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:alpha="0.95"
                            android:contentDescription="Fortune"
                            android:src="@drawable/ic_fortune_cookie" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Tap to open your fortune"
                            android:textColor="#1E1E1E"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ===================== PANEL B ===================== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <!-- Greeting -->
                <TextView
                    android:id="@+id/tvHelloUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, User!"
                    android:textColor="#111111"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvIdentity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Track your mood, reflect, and reset â€” one day at a time."
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    android:alpha="0.70"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvHelloUser"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Quote / reflection card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quoteCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F6F1FF"
                    app:layout_constraintTop_toBottomOf="@id/tvIdentity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tvCenterQuote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quote..."
                            android:textColor="#1E1E1E"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:alpha="0.90"/>

                        <TextView
                            android:id="@+id/tvSubQuote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="You are always valid."
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:alpha="0.85"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- âœ… NEW: calendar header row (NOT a card) -->
                <LinearLayout
                    android:id="@+id/calendarHeaderRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/quoteCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvCalendarHeaderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This month"
                        android:textColor="#1E1E1E"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/tvCalendarHeaderDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="â€¢"
                        android:textColor="#1E1E1E"
                        android:textSize="14sp"
                        android:alpha="0.35"/>
                </LinearLayout>

                <!-- Calendar -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/calendarCardHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F6F6F6"
                    app:layout_constraintTop_toBottomOf="@id/calendarHeaderRow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weekDayTextAppearance="@style/HomeCalendarWeekText"
                        android:dateTextAppearance="@style/HomeCalendarDateText"
                        android:focusedMonthDateColor="#1E1E1E"
                        android:unfocusedMonthDateColor="#8A8A8A"
                        android:selectedWeekBackgroundColor="#D6C9F2"
                        android:weekSeparatorLineColor="#E0E0E0"/>
                </androidx.cardview.widget.CardView>

                <!-- Wind down -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWindDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F6F1FF"
                    app:layout_constraintTop_toBottomOf="@id/calendarCardHome"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/tvWindDownTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wind down ðŸŒ™"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tvWindDownDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="If you want to slow down, weâ€™ve got mini activities you can try."
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvWindDownSuggestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Suggestion: â€”"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp"
                            android:alpha="0.85"
                            android:fontFamily="sans-serif"/>

                        <Button
                            android:id="@+id/btnBrowseActivities"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="10dp"
                            android:text="Browse mini activities"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="#1E1E1E"
                            android:background="@drawable/button_pill_ripple" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- book overlay include stays -->
                <include
                    android:id="@+id/includeOpenBook"
                    layout="@layout/overlay_open_book" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
