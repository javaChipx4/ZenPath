<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <View style="@style/WeekDot"/>
        <View style="@style/WeekDotSelected"/>
        <View style="@style/WeekDot"/>
        <View style="@style/WeekDot"/>
        <View style="@style/WeekDot"/>
        <View style="@style/WeekDot"/>
        <View style="@style/WeekDot"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stress Level"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>

    <ProgressBar
        android:id="@+id/progressStress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/tvStressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:layout_marginTop="8dp"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Played"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFF6EE"/>

</LinearLayout>
