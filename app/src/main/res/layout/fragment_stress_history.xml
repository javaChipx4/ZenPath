<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>

    <!-- Week labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView style="@style/WeekLabel" android:text="M"/>
        <TextView style="@style/WeekLabel" android:text="T"/>
        <TextView style="@style/WeekLabel" android:text="W"/>
        <TextView style="@style/WeekLabel" android:text="TH"/>
        <TextView style="@style/WeekLabel" android:text="F"/>
        <TextView style="@style/WeekLabel" android:text="SAT"/>
        <TextView style="@style/WeekLabel" android:text="SUN"/>
    </LinearLayout>

    <!-- Swipeable week dates -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/weekPager"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="6dp"
        android:overScrollMode="never" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stress Level"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>

    <ProgressBar
        android:id="@+id/progressStress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="0"/>

    <TextView
        android:id="@+id/tvStressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_marginTop="8dp"
        android:textColor="#1E1E1E"
        android:fontFamily="serif"/>
</LinearLayout>
