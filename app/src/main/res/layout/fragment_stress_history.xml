<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStressHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F2EFF8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_panel_purple_mt"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date label -->

            <!-- Week navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#E9E2FF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/btnPrevWeek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="‹"
                    android:textColor="#1E1E1E"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvWeekLabel"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="This week"
                    android:textSize="12sp"
                    android:textColor="#1E1E1E"
                    android:fontFamily="serif"
                    android:background="#DCD3FF"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <TextView
                    android:id="@+id/btnNextWeek"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="›"
                    android:textColor="#1E1E1E"
                    android:textSize="22sp" />
            </LinearLayout>

            <!-- Days + dots aligned (Mon..Sun) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="#E9E2FF"
                android:padding="6dp"
                android:layout_marginBottom="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot0"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot1"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot2"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TH"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot3"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot4"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAT"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot5"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#DCD3FF"
                    android:layout_marginEnd="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUN"
                        android:textColor="#4A4A4A"
                        android:textSize="10sp" />

                    <View
                        android:id="@+id/dot6"
                        style="@style/WeekDot"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Selected date text -->
            <TextView
                android:id="@+id/tvSelectedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="serif"
                android:text="Feb 05, 2026"
                android:textColor="#1E1E1E"
                android:textSize="12sp" />

            <!-- Stress section -->
            <TextView
                android:id="@+id/tvStressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Stress Level"
                android:textColor="#1E1E1E"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progStressPreview"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_stress_low"
                android:indeterminate="false" />

            <TextView
                android:id="@+id/tvStressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="serif"
                android:text="50%"
                android:textColor="#1E1E1E"
                android:textSize="12sp" />

            <!-- Application played -->
            <TextView
                android:id="@+id/tvAppPlayedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="serif"
                android:text="Application Played"
                android:textColor="#1E1E1E"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!-- ✅ Updated card: now shows icons + all games + totals + trend -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAppPlayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EFE7DB"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Star Sweep -->
                    <LinearLayout
                        android:id="@+id/rowStar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivStar"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_constella" />

                        <TextView
                            android:id="@+id/tvStarName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Constella"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvStarTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="0 min"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Lantern Release -->
                    <LinearLayout
                        android:id="@+id/rowLantern"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivLantern"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_lantelle" />

                        <TextView
                            android:id="@+id/tvLanternName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Lantelle"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvLanternTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="0 min"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Planet -->
                    <LinearLayout
                        android:id="@+id/rowPlanet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivPlanet"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_asthera" />

                        <TextView
                            android:id="@+id/tvPlanetName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:text="Asthera"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPlanetTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="0 min"
                            android:textColor="#1E1E1E"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/dividerGames"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="0.25"
                        android:background="#000000" />

                    <TextView
                        android:id="@+id/tvTotalToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Total today: 0 min"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvThisWeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="serif"
                        android:text="This week: 0 min"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTrend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="serif"
                        android:text="Trend: Not enough data..."
                        android:textColor="#1E1E1E"
                        android:textSize="12sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
