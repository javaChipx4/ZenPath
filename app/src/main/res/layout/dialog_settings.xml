<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:clickable="true"
    android:focusable="true"
    android:padding="22dp">

    <!-- YOUR CARD (same layout you sent) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsCard"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_gravity="center"
        app:cardCornerRadius="14dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#BFD6EA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Settings"
                android:textColor="#1E1E1E"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="serif" />

            <!-- Home -->
            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/tvSettingsTitle"
                android:layout_marginTop="28dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="44dp"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:src="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnHome"
                android:layout_alignStart="@id/btnHome"
                android:layout_marginTop="6dp"
                android:text="home"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:fontFamily="serif" />

            <!-- History -->
            <ImageButton
                android:id="@+id/btnHistory"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignTop="@id/btnHome"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="44dp"
                android:background="@android:color/transparent"
                android:contentDescription="History"
                android:src="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnHistory"
                android:layout_alignStart="@id/btnHistory"
                android:layout_marginTop="6dp"
                android:text="history"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:fontFamily="serif" />

            <!-- Back -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/btnHome"
                android:layout_marginTop="26dp"
                android:layout_alignStart="@id/btnHome"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@android:drawable/ic_media_previous" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnBack"
                android:layout_alignStart="@id/btnBack"
                android:layout_marginTop="6dp"
                android:text="back"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:fontFamily="serif" />

            <!-- Mood Tracker -->
            <ImageButton
                android:id="@+id/btnMood"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignTop="@id/btnBack"
                android:layout_alignStart="@id/btnHistory"
                android:background="@android:color/transparent"
                android:contentDescription="Mood Tracker"
                android:src="@android:drawable/ic_menu_edit" />

            <TextView
                android:id="@+id/tvMood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnMood"
                android:layout_alignStart="@id/btnMood"
                android:layout_marginTop="6dp"
                android:text="mood tracker"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:fontFamily="serif" />

            <!-- Volume icon -->
            <ImageView
                android:id="@+id/imgVolume"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@id/btnBack"
                android:layout_marginTop="44dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="28dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:contentDescription="Volume" />

            <!-- Slider line (visual) -->
            <View
                android:id="@+id/volumeLine"
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:layout_alignBaseline="@id/imgVolume"
                android:layout_toEndOf="@id/imgVolume"
                android:layout_marginStart="12dp"
                android:background="#1E1E1E"
                android:alpha="0.55" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
