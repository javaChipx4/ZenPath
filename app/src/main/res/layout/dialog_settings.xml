<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:clickable="true"
    android:focusable="true"
    android:padding="22dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsCard"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#BFD6EA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- ===== Header ===== -->
            <TextView
                android:id="@+id/tvSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Settings"
                android:textColor="#1E1E1E"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="serif" />

            <!-- Optional: Switch profile (kept same IDs, default GONE) -->
            <TextView
                android:id="@+id/tvSwitchProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Switch profile"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:fontFamily="serif"
                android:alpha="0.85"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btnSwitchProfile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent"
                android:contentDescription="Switch Profile"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#1E1E1E"
                android:visibility="gone" />

            <!-- divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:alpha="0.25"
                android:background="#1E1E1E" />

            <!-- ===== 2x2 Grid ===== -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- HOME -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/btnHome"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/box_rounded"
                        android:contentDescription="Home"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_view"
                        android:tint="#1E1E1E" />

                    <TextView
                        android:id="@+id/tvHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Home"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:alpha="0.85" />
                </LinearLayout>

                <!-- HISTORY -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/btnHistory"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/box_rounded"
                        android:contentDescription="History"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="#1E1E1E" />

                    <TextView
                        android:id="@+id/tvHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="History"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:alpha="0.85" />
                </LinearLayout>

                <!-- BACK -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/box_rounded"
                        android:contentDescription="Back"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_media_previous"
                        android:tint="#1E1E1E"
                        android:alpha="0.6" />

                    <TextView
                        android:id="@+id/tvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Back"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:alpha="0.6" />
                </LinearLayout>

                <!-- MOOD -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/btnMood"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/box_rounded"
                        android:contentDescription="Mood Tracker"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="#1E1E1E" />

                    <TextView
                        android:id="@+id/tvMood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Mood tracker"
                        android:textColor="#1E1E1E"
                        android:textSize="12sp"
                        android:fontFamily="serif"
                        android:alpha="0.85" />
                </LinearLayout>

            </GridLayout>

            <!-- divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.25"
                android:background="#1E1E1E" />

            <!-- ===== Volume ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgVolume"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:contentDescription="Volume"
                    android:tint="#1E1E1E"
                    android:alpha="0.75" />

                <SeekBar
                    android:id="@+id/seekVolume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="60" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
