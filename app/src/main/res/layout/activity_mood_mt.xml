<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_blue_gradient_diary"
        android:padding="16dp">


    <!-- Top line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2A2A2A"
        android:alpha="0.35" />

    <!-- Top-right hamburger -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- âœ… REPLACED: CalendarView (same as MainActivity style) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showWeekNumber="false"
            android:weekDayTextAppearance="@style/HomeCalendarWeekText"
            android:dateTextAppearance="@style/HomeCalendarDateText"

            android:focusedMonthDateColor="#1E1E1E"
            android:unfocusedMonthDateColor="#8A8A8A"
            android:selectedWeekBackgroundColor="#D6C9F2"
            android:weekSeparatorLineColor="#E0E0E0"
            android:firstDayOfWeek="1"
            android:padding="6dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Purple panel (keep your existing UI) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_panel_purple_mt"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Week dots row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Labels row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView style="@style/DotLabel" android:text="M"/>
                <TextView style="@style/DotLabel" android:text="T"/>
                <TextView style="@style/DotLabel" android:text="W"/>
                <TextView style="@style/DotLabel" android:text="T"/>
                <TextView style="@style/DotLabel" android:text="F"/>
                <TextView style="@style/DotLabel" android:text="S"/>
                <TextView style="@style/DotLabel" android:text="S"/>
            </LinearLayout>

            <!-- Dots row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:weightSum="7"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleMon" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleTue" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleWed" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleThu" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleFri" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleSat" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View android:id="@+id/circleSun" style="@style/DotCircle" android:layout_gravity="center"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Mood row -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOOD:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="14dp"/>

        <LinearLayout
            android:id="@+id/moodRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvMood0"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ˜"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ™‚"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ˜"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ¥°"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ˜­"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Reflection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFLECTION:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="14dp"/>

        <EditText
            android:id="@+id/etReflection"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/bg_reflection_box_mt"
            android:hint=""
            android:padding="10dp"
            android:gravity="top"
            android:inputType="textMultiLine"/>
    </LinearLayout>

    <!-- Stress bar area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0%"
            android:textColor="#2A2A2A"
            android:textSize="12sp"
            android:gravity="start"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50%"
            android:textColor="#2A2A2A"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100%"
            android:textColor="#2A2A2A"
            android:textSize="12sp"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Stress SeekBar -->
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekStress"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="6dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/stress_seekbar_progress_mt"
        android:thumb="@drawable/stress_thumb_mt"
        android:splitTrack="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"/>
    </LinearLayout>
</ScrollView>
