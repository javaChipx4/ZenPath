<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_screen_gradient_mt"
    android:padding="16dp">

    <!-- Top line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2A2A2A"
        android:alpha="0.35" />

    <!-- Top-right hamburger -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:textSize="26sp"
            android:textColor="#2A2A2A"/>
    </LinearLayout>

    <!-- Calendar card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_calendar_card_mt"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Month Year Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMonthYearLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="JANUARY"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvMonthYearRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Week labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:weightSum="7">

            <TextView style="@style/WeekLabel" android:text="SUN"/>
            <TextView style="@style/WeekLabel" android:text="MON"/>
            <TextView style="@style/WeekLabel" android:text="TUE"/>
            <TextView style="@style/WeekLabel" android:text="WED"/>
            <TextView style="@style/WeekLabel" android:text="THU"/>
            <TextView style="@style/WeekLabel" android:text="FRI"/>
            <TextView style="@style/WeekLabel" android:text="SAT"/>
        </LinearLayout>

        <!-- Calendar grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCalendar"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="6dp"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:padding="0dp"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:spanCount="7"
            tools:itemCount="42"
            tools:listitem="@layout/item_calendar_day_mt" />
    </LinearLayout>

    <!-- Purple panel (like your image) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_panel_purple_mt"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Week dots row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Labels row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView style="@style/DotLabel" android:text="M"/>
                <TextView style="@style/DotLabel" android:text="T"/>
                <TextView style="@style/DotLabel" android:text="W"/>
                <TextView style="@style/DotLabel" android:text="T"/>
                <TextView style="@style/DotLabel" android:text="F"/>
                <TextView style="@style/DotLabel" android:text="S"/>
                <TextView style="@style/DotLabel" android:text="S"/>
            </LinearLayout>

            <!-- Dots row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:weightSum="7"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleMon"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleTue"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleWed"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleThu"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleFri"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleSat"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout style="@style/DotCircleSlot">
                    <View
                        android:id="@+id/circleSun"
                        style="@style/DotCircle"
                        android:layout_gravity="center"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Mood row -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOOD:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="14dp"/>

        <LinearLayout
            android:id="@+id/moodRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvMood0"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ˜"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ™‚"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ˜"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ¥°"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tvMood4"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ðŸ˜­"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Reflection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFLECTION:"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="14dp"/>

        <EditText
            android:id="@+id/etReflection"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/bg_reflection_box_mt"
            android:hint=""
            android:padding="10dp"
            android:gravity="top"
            android:inputType="textMultiLine"/>
    </LinearLayout>

    <!-- Stress bar area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0%"
            android:textColor="#2A2A2A"
            android:textSize="12sp"
            android:gravity="start"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50%"
            android:textColor="#2A2A2A"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100%"
            android:textColor="#2A2A2A"
            android:textSize="12sp"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Stress SeekBar (flat progress style) -->
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekStress"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="6dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/stress_seekbar_progress_mt"
        android:thumb="@drawable/stress_thumb_mt"
        android:splitTrack="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"/>
</LinearLayout>