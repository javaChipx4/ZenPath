<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/settingsCard"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F7F0E6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Star Sweep Settings"
            android:textSize="16sp"
            android:textColor="#1E1E1E"
            android:fontFamily="serif"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btnBackToGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Games"
            android:backgroundTint="#C6B7E2"
            android:textColor="#1E1B3A"/>

        <Button
            android:id="@+id/btnRestartShape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restart Shape"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#1E1B3A"/>

    </LinearLayout>

</FrameLayout>